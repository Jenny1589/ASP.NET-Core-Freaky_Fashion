@page
@model FreakyFashion.CheckoutModel
@{
    ViewData["Title"] = "Checkout";
}

<h2 class="header">@ViewData["Title"]</h2>

@foreach (var orderItem in Model.Cart.CartContent)
{
    <a href="~/Product/@orderItem.Product.UrlSlug">
        <div class="row my-2 py-3">
            <div class="col-2">
                <img class="img" src="@orderItem.Product.ImageUri" />
            </div>
            <div class="col">
                <h4>@orderItem.Product.Name</h4>
            </div>
            <div class="col">
                
                Count: <br/>
                @orderItem.Count

            </div>
            <div class="col">
                <b>@string.Format("{0:c}", orderItem.Cost)</b>                
            </div>
        </div>
    </a>
    <hr />
}

<form method="post" class="d-flex justify-content-between align-items-center">
    <h4>
        Total:<br />
        @string.Format("{0:c}", Model.Cart.TotalCost)
    </h4>
    <button type="submit" class="btn btn-freaky">Buy</button>
</form>



