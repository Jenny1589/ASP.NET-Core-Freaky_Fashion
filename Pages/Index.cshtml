@page
@using FreakyFashion.Data.Entities
@model IndexModel
@{
    ViewData["Title"] = "Start";

    var highligtedCategories = Model.CategoryList.Where(c => c.IsHighlighted);
    var campaignProducts = Model.ProductList
        .Where(p => p.ProductCategories
                        .Select(pc => pc.Category.Name)
                        .Contains("Campaign"))
        .ToList();

    var popularProducts = Model.ProductList.GetRange(0, 8);

}
  
<partial name="_Hero" model="campaignProducts" />  
<partial name="_Categories" model="highligtedCategories" />
<partial name="_PopularProducts" model="popularProducts" />
