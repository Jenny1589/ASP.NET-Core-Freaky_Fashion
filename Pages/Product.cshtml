@page "{urlSlug}"
@model FreakyFashion.ProductModel

@{
    ViewData["Title"] = Model.Product.Name;
}

<div class="row mt-3">
    <div class="col-4">
        <div class="img-container">
            <img class="img" src="@Model.Product.ImageUri" />
        </div>
    </div>
    <div class="col-8">
        <h2 class="header">@Model.Product.Name</h2>
        <p class="text-muted">Art.nr: @Model.Product.ArticleNumber</p>
        <p>@Model.Product.Description</p>
        <p class="price">@string.Format("{0:c}", Model.Product.Price)</p>

        <form method="post">
            <input name="productId" type="hidden" asp-for="Product.Id" />
            <button class="btn btn-freaky align-bottom w-25">Buy</button>
        </form>        
    </div>
</div>

<partial name="_RecommendedProducts" model="Model.RecommendedProductList" />