@page "{orderGuid}"
@model FreakyFashion.OrderConfirmationModel
@{
    ViewData["Title"] = "Order Confirmation";
}

<h2 class="d-flex justify-content-between mb-2">
    <span class="header">@ViewData["Title"]</span>
    <span class="header">#@Model.Order.Id</span>
</h2>

<div class="row">
    <div class="col bg-light p-3">
        <p>Thanks for your order!</p>

        <p>
            An invoice will be sent to:<br />
            @Model.Order.Customer.Email
        </p>
    </div>
    <div class="col d-flex justify-content-end align-items-center">
        <div>
            <b>Delivery address:</b><br />
            @Model.Order.Customer.FirstName @Model.Order.Customer.LastName<br />
            @Model.Order.Customer.Street<br />
            @Model.Order.Customer.Zip  @Model.Order.Customer.City<br />
        </div>
    </div>
</div>

<partial name="_OrderItemList" model="Model.Order.OrderContent" />

<h4>
    Total:<br />
    @string.Format("{0:c}", Model.Order.OrderContent.Select(oi => oi.Cost).Sum())
</h4>