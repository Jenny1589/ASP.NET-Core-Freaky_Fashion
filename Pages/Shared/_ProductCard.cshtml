@using FreakyFashion.Data.Entities

@model Product


<div class="col-3">
    <a class="img-container link" href="/product/@Model.UrlSlug">
        <img class="img my-3" src="@Model.ImageUri" />
        <h4>@Model.Name</h4>
        <div class="font-weight-bold">@string.Format("{0:c}", Model.Price)</div>
    </a>
</div>