@using FreakyFashion.Data.Entities

@model Cart

    <div id="cart" class="cart">
        <h3 class="header">Cart</h3>

        @if (Model.Count == 0)
        {
            <p>Your cart is empty</p>
        }
        else
        {
            <div class="cart-content">
                @foreach (var orderItem in Model.CartContent)
                {
                    <hr />
                    <a href="~/Product/@orderItem.Product.UrlSlug">
                        <div class="row pr-3">
                            <div class="col d-flex justify-content-between">
                                <span class="font-weight-bold">@orderItem.Product.Name</span>
                                <span class="font-weight-bold">@string.Format("{0:c}", orderItem.Cost)</span>
                            </div>
                        </div>
                        <div class="row py-1">
                            <div class="col-4">
                                <img class="img" src="@orderItem.Product.ImageUri" />
                            </div>
                            <div class="col">
                                <div class="row mb-2">

                                    <div class="col">
                                        <small>
                                            Price:<br />
                                            @string.Format("{0:c}", orderItem.Product.Price)
                                        </small>
                                    </div>
                                    <div class="col">
                                        <small>
                                            Count:<br />
                                            @orderItem.Count
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                }
            </div>

            <hr />
            <div class="d-flex justify-content-between align-items-center">
                <a href="~/Checkout" class="btn btn-freaky">Checkout</a>
                <h4>
                    Total:<br />
                    @string.Format("{0:c}", Model.TotalCost)
                </h4>
            </div>

        }

    </div>