@using FreakyFashion.Data.Entities

@model Cart

    <div id="cart" class="cart">
        <h3 class="header">Cart</h3>

        @if (Model.Count == 0)
        {
            <p>Your cart is empty</p>
        }
        else
        {
            <div class="cart-content">
                @foreach (var orderItem in Model.CartContent)
                {
                    <hr />
                    <a href="~/Product/@orderItem.Product.UrlSlug">
                        <div class="row my-2 py-3">
                            <div class="col-4">
                                <img class="img" src="@orderItem.Product.ImageUri" />
                            </div>
                            <div class="col">
                                @orderItem.Product.Name
                            </div>
                            <div class="col">
                                <small>
                                    Count: @orderItem.Count<br />
                                    <br />
                                    <b>@string.Format("{0:c}", orderItem.Cost)</b>
                                </small>
                            </div>
                        </div>
                    </a>
                }
            </div>

            <hr />
            <div class="d-flex justify-content-between align-items-center">
                <a href="~/Checkout" class="btn btn-freaky">Checkout</a>
                <h4>
                    Total:<br />
                    @string.Format("{0:c}", Model.TotalCost)
                </h4>
            </div>

        }

    </div>