@using FreakyFashion.Data.Entities

@model List<Category>

@{ 
    var highlightedCategories = Model.Where(c => c.IsHighlighted);
    var unHighlightedCategories = Model.Where(c => !c.IsHighlighted);
}

    <ul class="navbar-row text-white p-0 pt-4">
        <li class="nav-item">
            <a class="navbar-link p-3" href="/">Start</a> |
        </li>

        @foreach (var category in highlightedCategories)
        {
            <li class="nav-item">
                <a class="navbar-link p-3" href="/category/@category.UrlSlug">@category.Name</a> |
            </li>
        }

        <li class="nav-item dropdown">
            <a class="navbar-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Categories
            </a>

            <div class="dropdown-menu bg-black" aria-labelledby="navbarDropdown">

                @foreach (var category in unHighlightedCategories)
                {
                    <a class="dropdown-item" href="/category/@category.UrlSlug">@category.Name</a>
                }

                <div class="dropdown-divider"></div>
            </div>
        </li>

        <div class="align-right">
            <a class="navbar-link d-flex align-items-center" href="/Admin">
                <i class="material-icons mr-2">
                    settings
                </i>
                Administration
            </a>
        </div>
    </ul>

