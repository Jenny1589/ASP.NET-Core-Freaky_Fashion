@using FreakyFashion.Data.Entities

@model List<Product>

@{ 
    int counter = 0;
}

<div class="row mt-4">
    <div class="col">
        <h2 class="header">Today's freaky</h2>
    </div>
</div>

@while(counter < Model.Count())
{    
    <div class="row">
        @for (int i = 0; i < 4; i++)
        {
            @if (counter != Model.Count())
            {
                var product = Model[counter++];

                <div class="col-3">
                    <a class="img-container link" href="/product/@product.Id">
                        <img class="img my-3" src="@product.ImageUri" />
                        <h5 class="header">@product.Name</h5>
                        <div class="price">@string.Format("{0:c}", product.Price)</div>
                    </a>
                </div>
            }
        }
    </div>
}




