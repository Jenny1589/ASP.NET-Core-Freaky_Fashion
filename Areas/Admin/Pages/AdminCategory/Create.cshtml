@page
@model FreakyFashion.Areas.Admin.AdminCategory.CreateModel

@{
    ViewData["Title"] = "Create";
}

    <form method="post" class="p-3">
        <div>
            <div class="row align-items-center">
                <div class="col-8">
                    <h4>Add category</h4>
                </div>
                <div class="col-2">
                    <button type="submit" class="btn btn-admin">
                        <i class="material-icons mr-2">
                            save
                        </i>
                        Save
                    </button>
                </div>
                <div class="col-2">
                    <a class="admin-link" asp-page="Index">
                        <i class="material-icons mr-2">
                            arrow_back
                        </i>
                        Back
                    </a>
                </div>
            </div>

            <hr />
        </div>

        <div class="row">
            <div class="col">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group w-75">
                    <label asp-for="CategoryModel.Name" class="control-label"></label>
                    <input asp-for="CategoryModel.Name" class="form-control" />
                    <span asp-validation-for="CategoryModel.Name" class="text-danger"></span>
                </div>
               
                <div class="form-group w-75">
                    <label asp-for="CategoryModel.ImageUri" class="control-label"></label>
                    <input asp-for="CategoryModel.ImageUri" class="form-control" />
                    <span asp-validation-for="CategoryModel.ImageUri" class="text-danger"></span>
                </div>

                <div class="form-check">
                    <input type="checkbox" asp-for="CategoryModel.IsHighlighted" class="form-check-input" />
                    <label asp-for="CategoryModel.IsHighlighted" class="form-check-label"></label>
                </div>
            </div>
        </div>
    </form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
