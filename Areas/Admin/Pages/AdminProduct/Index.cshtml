@page
@model FreakyFashion.Areas.Admin.AdminProduct.IndexModel

@{ 
    ViewData["Title"] = "Product administration";
}


<a class="btn btn-admin mb-2" asp-page="Create">
    <i class="material-icons mr-2">
        add
    </i>
    Add product
</a>

<table class="table table-striped" style="width: 730px">
    <thead>
        <tr>
            <th></th>
            <th class="w-25">
                @Html.DisplayNameFor(model => model.Product[0].ArticleNumber)
            </th>
            <th class="w-25">
                @Html.DisplayNameFor(model => model.Product[0].Name)
            </th>
            <th>
                Categories
            </th>
            <th class="w-25">
                @Html.DisplayNameFor(model => model.Product[0].Price)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Product) {
        <tr>
            <td>
                <small>
                    <a class="admin-link d-flex align-items-center"
                       asp-area="Admin" asp-page="./Edit" asp-route-id="@item.Id">
                        <i class="material-icons mr-2">
                            edit
                        </i>
                        Edit
                    </a>
                </small>
                <small>
                    <a class="admin-link d-flex align-items-center"
                       asp-page="./Details" asp-route-id="@item.Id">
                        <i class="material-icons mr-2">
                            info
                        </i>
                        Details
                    </a>
                </small>
                <small>
                    <a class="admin-link d-flex align-items-center"
                       asp-page="./Delete" asp-route-id="@item.Id">

                        <i class="material-icons mr-2">
                            delete
                        </i>
                        Delete
                    </a>
                </small>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @foreach(var productCategory in item.ProductCategories)
                {
                    @productCategory.Category.Name<br />
                }                
            </td>
            <td>
                @string.Format("{0:c}", item.Price)
            </td>

        </tr>
}
    </tbody>
</table>
