@page
@model FreakyFashion.Areas.Admin.AdminProduct.IndexModel

<p>
    <a class="badge badge-pill badge-dark d-flex align-items-center p-2" style="width: 130px;" asp-page="Create">
        <i class="material-icons mr-2">
            add
        </i>
        Add product
    </a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th></th>
            <th class="w-25">
                @Html.DisplayNameFor(model => model.Product[0].ArticleNumber)
            </th>
            <th class="w-25">
                @Html.DisplayNameFor(model => model.Product[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Description)
            </th>
            <th class="w-25">
                @Html.DisplayNameFor(model => model.Product[0].Price)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Product) {
        <tr>
            <td>
                <a class="admin-link d-flex align-items-center" 
                   asp-area="Admin" asp-page="./Edit" asp-route-id="@item.Id">
                  
                    <i class="material-icons mr-2">
                        edit
                    </i>
                    Edit
                </a> 

                <a class="admin-link d-flex align-items-center" 
                   asp-page="./Details" asp-route-id="@item.Id">
                    <i class="material-icons mr-2">
                        info
                    </i>
                    Details
                </a> 

                <a class="admin-link d-flex align-items-center"
                   asp-page="./Delete" asp-route-id="@item.Id">
                    <i class="material-icons mr-2">
                        delete
                    </i>
                    Delete
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <small>@Html.DisplayFor(modelItem => item.Description)</small>
            </td>
            <td>
                @string.Format("{0:c}", item.Price)
            </td>

        </tr>
}
    </tbody>
</table>
