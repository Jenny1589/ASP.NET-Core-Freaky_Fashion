@page
@model LoginModel

@{
    ViewData["Title"] = "Members club";
}

@section Style{ 
    <style>

        hr {
            border-color: white;
        }
        .background{

            margin: -16px -48px 0 -48px;
            padding: 24px;
            background-color: black;
            color: white;
        }

        .image {
            margin-top: -92px;
            margin-left: -75px;
            height: 649px;
        }
    </style>
}

<div class="background">
    <h2 class="header">@ViewData["Title"]</h2>
    <hr />
    <div class="row justify-content-between">
        <div class="col-1"></div>
        <div class="col-4">
            <section>
                <form id="account" method="post">

                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="form-group">
                            <button type="submit" class="btn btn-freaky">Sign in</button>
                        </div>
                        <div class="form-group">
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword" class="text-white">Forgot your password?</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-white">Register as a new user</a>
                            </p>
                        </div>
                    </div>
                </form>
            </section>
        </div>
        <div class="col-1"></div>
        <div class="col-4 col-md-offset-2">
            <section>
                <img class="image" src="~/img/signIn.jpg" />
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
