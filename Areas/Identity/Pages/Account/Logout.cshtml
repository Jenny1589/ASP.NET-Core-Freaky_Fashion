@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

@section Scripts{ 
    <script>
        let countdown = 3
        document.getElementById("counter").textContent = countdown;

        let interval = setInterval(function () {
            countdown--;
            document.getElementById("counter").textContent = countdown;
            if (countdown === 0) {
                clearInterval(interval);
                window.location = '/';
            }

        }, 1000);
    </script>
}


    <h1>@ViewData["Title"]</h1>
    <p>
    You have successfully logged out and will be redirected to the startpage in
    <span id="counter"></span> seconds.
    </p>